<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BorderControl.GridExample"
             Title="GridExample">
    <Grid Margin="10" RowDefinitions="*, 2*, 2*" ColumnDefinitions="*, *, *">
        <Border Grid.Row="0" Grid.Column="2" WidthRequest="125" BackgroundColor="Blue"></Border>
        <Border Grid.Row="1" Grid.ColumnSpan="3" BackgroundColor="Yellow"></Border>
    </Grid>
</ContentPage>